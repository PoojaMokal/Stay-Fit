<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.TaskFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bmi_calculator"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="30dp"
            android:elevation="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FDAB9F"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/bmi"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/nunito_sans_black"
                    android:gravity="center_vertical"
                    android:text="BMI Calculator"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/water_tracker"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="30dp"
            android:elevation="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#92DFF3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/waterdrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Water Tracker"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans_black"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>






</ScrollView>